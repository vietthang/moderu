{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "stripInternal": true,
    "declaration": true
  },
  "compileOnSave": false
}
